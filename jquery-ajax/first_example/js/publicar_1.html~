<!DOCTYPE html>
<html>
<head>
<title>PubNub</title>

<script src="https://cdn.pubnub.com/sdk/javascript/pubnub.4.20.0.js"></script>
<script src="js/vendor/jquery.js"></script>
<script src="js/foundation.min.js"></script>
<script>
function conectar() {


    //Crear instancia de PubNub
    pubnub = new PubNub({
        publishKey : 'pub-c-49f90d33-75cc-450b-8acb-e186a2030e17',
        subscribeKey : 'sub-c-a76af656-0165-11e8-bd18-32931b190843',

    })



    pubnub.addListener({
        status: function(statusEvent) {
            if (statusEvent.category === "PNConnectedCategory") {
                console.log("conectado");

            }
        },
        message: function(message) {
            console.log("Mensaje", message);
        }
    })




    pubnub.subscribe({
        channels: ['vlad'],
       // withPresence: true
    });


};
function publicarMensaje() {

  pubnub = new PubNub({
      publishKey : 'pub-c-80e50667-83cd-4295-85c8-580a8ebcc679',
      subscribeKey : 'sub-c-3d1811e0-0178-11e8-bd8f-6ec1080ef9b6',

  })
  var comentario=$("#comment").val();

    var publishConfig = {
        channel : "vlad",
        message : comentario
    }
    pubnub.publish(publishConfig, function(status, response) {
        console.log("Desde publicarMensaje");
        console.log(status, response);
    })
}


//$("#submit_comment").click(conectar());



</script>
</head>
<body>
<input type="submit" id="submit_comment">
<input type="submit" id="conec" value="conectar">
<textarea id="comment"></textarea>


</body>

</html>
<script type="text/javascript">

$(document).ready(function(){
$("#submit_comment").click(function(){
  publicarMensaje();
}
);
$("#conec").click(function(){conectar();});
});
    </script>

